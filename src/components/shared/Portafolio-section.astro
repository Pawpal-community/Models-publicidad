---
import Paragraph from "./Paragraph.astro";
import Image from "astro/components/Image.astro";
import { type ImageMetadata } from "astro";

export interface Props {
  title: string;
  images: { src: ImageMetadata; alt: string }[];
}

const { title, images } = Astro.props;
---

<li>
  <Paragraph
    className="mt-4 text-center text-base md:text-lg max-w-3xl mx-auto"
  >
    {title}
  </Paragraph>

  <div class="flex lg:flex-row flex-col gap-4 lg:gap-8 mt-6 lg:mt-10 items-center justify-center">
    {images.map((image) => (
      <Image
        src={image.src}
        alt={image.alt}
        class="lg:w-full max-h-[450px] rounded-3xl object-contain mt-4"
      />
    ))}
  </div>
</li>
