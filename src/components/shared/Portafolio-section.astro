---
import Paragraph from "./Paragraph.astro";
import { Image } from "astro:assets";
import { type ImageMetadata } from "astro";

export interface Props {
  title: string;
  images: { src: ImageMetadata; alt: string }[];
}

const { title, images } = Astro.props;
---

<li class="">
  <Paragraph
    className=" text-center font-bold text-base text:lg mt-10 md:text-lg lg:text-2xl max-w-3xl mx-auto text-gray-800 dark:text-gray-200"
  >
    {title}
  </Paragraph>

  <div class="flex lg:flex-row lg:justify-between flex-col gap-4 lg:gap-8 items-center justify-center">
    {images.map((image) => (
      <Image
        src={image.src}
        alt={image.alt}
        class="lg:w-full max-h-[450px] rounded-3xl object-cover object-top mt-4"
      />
    ))}
  </div>
</li>
