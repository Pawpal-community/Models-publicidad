---
import CloudinaryImage from "../CloudinaryImage/CloudinaryImage.astro";
import GradiantText from "../shared/GradiantText.astro";
import Title from "../shared/Title.astro";

interface Props {
  images: any[];
  className?: string;
}

const { images, className = '' } = Astro.props;
---

---

<div class={`${className} container mx-auto px-4`}>
    <div class="text-center max-w-3xl mx-auto">

        <Title>
            Test de  <GradiantText> Gallery</GradiantTex> 
            </Titl>
        </div>
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      {images.map(image => (
    <div class="group relative">
      <CloudinaryImage 
        publicId={image.public_id} 
        isThumbnail 
        width={400} 
        height={600}
      />
      
      <!-- Overlay con info -->
      <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center p-4">
        <p class="text-white text-center text-lg">{image.context?.custom?.alt || 'Modelo profesional'}</p>
      </div>
    </div>
  ))}
</div>