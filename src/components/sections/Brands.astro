---
import { Image } from "astro:assets";
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";

import llantilandia from "../../assets/logos/llantilandia-logo.jpg";
import fritolay from "../../assets/logos/fritolay-company-logo.png";
import tiendasrosy from "../../assets/logos/teindas-rosy.png";
import butterball from "../../assets/logos/butterball-logo.svg";
import superbarato from "../../assets/logos/superbarato.png";
import innova from "../../assets/logos/innova-logo.png";
import hondurines from "../../assets/logos/hondurines-logov2.png";

const brands = [
  {
    id: 1,
    name: "llantilandia",
    logo: llantilandia,
  },
  {
    id: 2,
    name: "fritolay",
    logo: fritolay,
  },
  {
    id: 3,
    name: "tiendasrosy",
    logo: tiendasrosy,
  },
  {
    id:4,
    name: "Hondurines",
    logo: hondurines
  },
  {
    id:5,
    name: "butterball",
    logo: butterball
  },
  {
    id:6,
    name: "Superbarato",
    logo: superbarato
  },
  {
    id:7,
    name: "INNOVA Fiber",
    logo: innova
  }
];

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<section class=`${className} `>
  <Container className="space-y-8">
    <div class="text-center max-w-3xl mx-auto">
      <Title>Hemos trabajado con las siguientes marcas</Title>
    </div>
    <div class="flex justify-center flex-wrap gap-4 ">
      {
        brands.map((brand) => (
          <div class=" p-4 sm:p-5 rounded-xl border border-box-border group bg-box-bg">
            <Image
              src={brand.logo}
              width={225}
              height={225}
              alt={brand.name}
              class="h-14 sm:h-16 w-48 object-contain ease-linear duration-300 grayscale group-hover:!grayscale-0 group-hover:scale-105 "
            />
          </div>
        ))
      }
    </div>
  </Container>
</section>
